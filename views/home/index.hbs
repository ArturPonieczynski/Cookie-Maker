<h1>{{upper 'Hello'}}</h1>

<h2>Select cookie base</h2>
<ul>
        {{#each bases}}
            <li><a href="/configurator/select-base/{{this.[0]}}" class="button">Select {{this.[0]}} for {{this.[1]}} PLN.</a></li>
        {{/each}}

<h2>Select cookie addons</h2>
        {{#each addons}}
            {{#if (isNotInArray @root.cookie.addons this.[0])}}
             <li><a href="/configurator/select-addons/{{this.[0]}}" class="button"}}>Select {{this.[0]}} for {{this.[1]}} PLN.</a></li>
            {{/if}}

{{!--             <li><a href="/configurator/select-addons/{{this.[0]}}" class="button {{#if (isInArray @root.cookie.addons this.[0])}}btn-disabled{{/if}}"}}>Select {{this.[0]}} for {{this.[1]}} PLN.</a></li>--}}

        {{/each}}
</ul>

{{# if cookie.base}}
    {{> cookie-preview}}
    {{> addone}}
    <a href="/order/summary" class="button button-big"><img src="/assets/img/4437681.png" class="trolley-img" alt="">Buy now!</a>
{{else}}
    <p>Select your favorite Cookie </p>
